{
  "name": "bhasha-mitra-word-addin",
  "version": "1.0.0",
  "description": "AI-powered Bangla language assistant for Microsoft Word using Google Gemini",
  "main": "index.html",
  "scripts": {
    "dev": "vite --port 3000 --host localhost",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "start": "office-addin-debugging start manifest-dev.xml desktop",
    "start:prod": "office-addin-debugging start manifest.xml desktop",
    "stop": "office-addin-debugging stop manifest.xml",
    "validate": "office-addin-manifest validate manifest.xml",
    "validate:dev": "office-addin-manifest validate manifest-dev.xml"
  },
  "keywords": [
    "office-add-in",
    "word",
    "bangla",
    "spell-checker",
    "grammar",
    "gemini-ai"
  ],
  "author": "Bhasha Mitra",
  "license": "MIT",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/office-js": "^1.0.560",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "gh-pages": "^6.1.0",
    "office-addin-debugging": "^5.0.11",
    "office-addin-dev-certs": "^1.13.1",
    "office-addin-lint": "^2.3.1",
    "office-addin-manifest": "^1.13.1",
    "typescript": "^5.9.3",
    "vite": "^5.0.8"
  }
}
